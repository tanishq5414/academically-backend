generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role UserRole @default(USER)
}

model Course {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  status CourseStatus @default(DRAFT)
  category CourseCategory @default(BEGINNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  url String
  courseId String
  duration Int
  uploadedBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseProgress {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  courseId String
  videoId String
  progress Int
  courseProgressStatus CourseProgressStatus @default(IN_PROGRESS)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseEnrollment {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  courseId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CourseProgressStatus {
  IN_PROGRESS
  COMPLETED
}

enum CourseCategory {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum UserRole {
  USER
  ADMIN
}

enum CourseStatus {
  DRAFT
  PUBLISHED
}

enum VideoStatus {
  DRAFT
  PUBLISHED
}
